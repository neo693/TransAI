{
  "name": "transai-browser-extension",
  "version": "1.0.0",
  "description": "AI-powered browser translation extension with vocabulary management",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "node scripts/build.js",
    "build:chrome": "node scripts/build.js chrome",
    "build:edge": "node scripts/build.js edge",
    "build:all": "pnpm build:chrome && pnpm build:edge",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:cross-browser": "vitest --run --config vitest.cross-browser.config.ts",
    "test:e2e": "node scripts/test-e2e.js",
    "test:e2e:headed": "node scripts/test-e2e.js --headed",
    "test:e2e:debug": "node scripts/test-e2e.js --debug",
    "test:e2e:ui": "node scripts/test-e2e.js --ui",
    "test:e2e:chrome": "node scripts/test-e2e.js --project=chromium",
    "test:e2e:extension": "node scripts/test-e2e.js --project=chrome-extension",
    "test:all": "pnpm test && pnpm test:e2e",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "lucide-react": "^0.541.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.0.268",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "jsdom": "^26.1.0",
    "playwright": "^1.55.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-web-extension": "^4.1.6",
    "vitest": "^1.4.0"
  }
}