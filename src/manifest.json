{
  "manifest_version": 3,
  "name": "TransAI - AI Translation Extension",
  "version": "1.0.0",
  "description": "AI-powered browser translation extension with vocabulary management and learning features",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tts",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "TransAI Translation",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "options_page": "options/index.html",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content/index.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/*"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}
